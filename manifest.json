{
    "manifest_version": 2,
    "name": "Vrau",
    "description": "Faz downloads dos arquivos do 'Tarefas'.",
    "version": "2.2",
    "browser_action": {
        "default_icon": "images/vrau.png",
        "default_title": "Vrau"
    },
    "content_scripts": [{
        "matches": ["http://200.17.198.2:8089/Tarefa*"],
        "js": [
            "scripts/jquery.min.js",
            "scripts/content.js"
        ]
    }],
    "background":{
        "scripts":["scripts/background.js"]
    },
    "icons": {
        "16": "images/vrau16.png",
        "48": "images/vrau48.png",
        "128": "images/vrau128.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "downloads"
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"
}